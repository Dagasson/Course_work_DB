<Window x:Class="Course_work.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Course_work"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Content="Войти" HorizontalAlignment="Left" Margin="177,166,0,0" VerticalAlignment="Top" Width="120" Click="button_Click"/>
        <TextBox x:Name="login" HorizontalAlignment="Left" Height="23" Margin="177,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="textBox_TextChanged"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Height="23" Margin="177,121,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="password_TextChanged"/>
        <Button x:Name="registry_button" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="177,214,0,0" VerticalAlignment="Top" Width="120" Click="registry_button_Click"/>
    </Grid>
</Window>
